{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "articles"
  ],
  "properties": {
    "articles": {
      "title": "List of articles",
      "type": "array",
      "items": {
        "title": "An article entry",
        "type": "object",
        "required": [
          "id",
          "date",
          "title"
        ],
        "properties": {
          "id": {
            "title": "Article ID",
            "type": "string"
          },
          "date": {
            "title": "Article date",
            "description": "Formatted in ISO 8601, e.g. `1970-12-31 07:00 -03`",
            "type": "string"
          },
          "title": {
            "title": "Article title",
            "type": "string"
          },
          "description": {
            "title": "Brief description about the article",
            "type": "string"
          }
        }
      }
    }
  }
}
