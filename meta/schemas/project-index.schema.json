{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "projects"
  ],
  "properties": {
    "projects": {
      "title": "List of projects",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "uuid",
          "name",
          "brief",
          "status",
          "url"
        ],
        "properties": {
          "uuid": {
            "title": "Project UUID",
            "type": "string"
          },
          "name": {
            "title": "Project name",
            "type": "string"
          },
          "logo": {
            "title": "Project logo",
            "type": "string"
          },
          "brief": {
            "title": "Project brief",
            "description": "A brief description about the project's purpose.",
            "type": "string"
          },
          "status": {
            "title": "Project status",
            "description": "Defines the health status of the project.",
            "type": "string",
            "enum": [
              "draft",
              "canceled",
              "active",
              "deprecated",
              "unmaintained"
            ]
          },
          "url": {
            "title": "Project URL",
            "description": "A link to the project page, e.g. GitHub.",
            "type": "string",
            "format": "uri"
          },
          "description": {
            "title": "A longer description of the project",
            "description": "Each item is a paragraph.",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "licenses": {
            "title": "Licensing details",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "title": "License name",
                  "type": "string"
                },
                "url": {
                  "title": "URL to the license file or website",
                  "type": "string",
                  "format": "uri"
                }
              },
              "required": [
                "name",
                "url"
              ]
            }
          },
          "docs": {
            "title": "An array of links to documentation",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "title": "A title to the URL page",
                  "type": "string"
                },
                "url": {
                  "title": "URL to the documentation page",
                  "type": "string",
                  "format": "uri"
                }
              }
            },
            "required": [
              "title",
              "url"
            ]
          },
          "links": {
            "title": "An array of links",
            "type": "array",
            "properties": {
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "title": "The title of the link",
                    "type": "string"
                  },
                  "url": {
                    "title": "The URL of the link",
                    "type": "string",
                    "format": "uri"
                  }
                },
                "required": [
                  "title",
                  "url"
                ]
              }
            }
          }
        }
      }
    }
  }
}
